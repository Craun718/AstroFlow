---
import { NAVIGATION, SOCIAL_LINKS, SITE } from '@config/site';
import { Package, Linkedin, Twitter, Facebook } from 'lucide-react';
---

<footer class="bg-slate-900 text-slate-300">
  <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-4">
      <!-- Company Info -->
      <div class="lg:col-span-1 space-y-6">
        <a href="/" class="flex items-center space-x-3 group">
          <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-linear-to-br from-blue-600 to-teal-600">
            <Package className="w-7 h-7 text-white" />
          </div>
          <span class="text-xl font-bold text-white">
            广西遥感空间信息科技有限公司
          </span>
        </a>
        <p class="text-sm text-slate-400 leading-relaxed max-w-xs">
          {SITE.description}
        </p>
        <div class="flex space-x-4">
          <a
            href={SOCIAL_LINKS.linkedin}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-blue-600 hover:text-white transition-all"
            aria-label="LinkedIn"
          >
            <Linkedin className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.twitter}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-blue-400 hover:text-white transition-all"
            aria-label="Twitter"
          >
            <Twitter className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.facebook}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-blue-500 hover:text-white transition-all"
            aria-label="Facebook"
          >
            <Facebook className="w-5 h-5" />
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          快速链接
        </h3>
        <ul class="space-y-3">
          {NAVIGATION.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-sm text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group"
              >
                <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          核心业务
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="/capabilities" class="text-sm text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              遥感监测
            </a>
          </li>
          <li>
            <a href="/capabilities" class="text-sm text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              实景三维
            </a>
          </li>
          <li>
            <a href="/capabilities" class="text-sm text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              数据中台
            </a>
          </li>
          <li>
            <a href="/capabilities" class="text-sm text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              智慧规划
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          联系我们
        </h3>
        <ul class="space-y-3 text-sm">
          <li>
            <a href="/rfq" class="text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              业务咨询
            </a>
          </li>
          <li>
            <a href="/facilities" class="text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              基地参观
            </a>
          </li>
          <li>
            <a href="/documentation" class="text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              文档中心
            </a>
          </li>
        </ul>
        
        <div class="mt-8">
          <a
            href="/rfq"
            class="inline-flex items-center px-6 py-3 text-sm font-semibold text-white bg-linear-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 rounded-lg shadow-lg hover:shadow-xl transition-all"
          >
            立即咨询
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-slate-800">
      <div class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0">
        <p class="text-sm text-slate-400">
          &copy; {new Date().getFullYear()} {SITE.author}. All rights reserved.
        </p>
        <div class="flex items-center space-x-6 text-sm">
          <a href="/" class="text-slate-400 hover:text-blue-400 transition-colors">
            隐私政策
          </a>
          <span class="text-slate-700">•</span>
          <a href="/" class="text-slate-400 hover:text-blue-400 transition-colors">
            服务条款
          </a>
          <span class="text-slate-700">•</span>
          <a href="/" class="text-slate-400 hover:text-blue-400 transition-colors">
            Cookie策略
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
