---
import BaseLayout from '@layouts/BaseLayout.astro';
import Section from '@components/ui/Section.astro';
import Card from '@components/ui/Card.astro';
import RFQForm from '@components/react/RFQForm';
import { Image } from 'astro:assets';
import { FileText, Clock, Shield, CheckCircle2, Phone, Mail, MessageCircle, Award, TrendingUp, Users } from 'lucide-react';
import rfqBgImg from '@assets/photo-1558618666-fcd25c85cd64.jpg';
import warehouseImg from '@assets/photo-1563013544-824ae1b704d3.jpg';
---

<BaseLayout title="业务咨询 - 立即开始">
  <!-- Hero Section with Professional Image -->
  <section class="relative h-[500px] md:h-[600px] flex items-center overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0">
      <Image 
        src={rfqBgImg}
        alt="Professional logistics and supply chain management"
        class="w-full h-full object-cover"
        width={2070}
        height={1380}
      />
      <div class="absolute inset-0 bg-linear-to-r from-slate-900/95 via-blue-900/90 to-slate-900/85"></div>
    </div>

    <!-- Content -->
    <div class="container mx-auto relative z-10 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center px-4 py-2 mb-6 bg-linear-to-r from-blue-600 to-teal-600 text-white text-sm font-semibold rounded-full shadow-lg animate-fadeInUp">
          <FileText className="w-4 h-4 mr-2" />
          立即获取定制方案
        </div>
        
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight animate-fadeInUp" style="animation-delay: 0.1s">
          业务 <span class="text-transparent bg-clip-text bg-linear-to-r from-blue-400 via-teal-400 to-blue-400">咨询</span>
        </h1>
        
        <p class="text-xl md:text-2xl text-slate-200 mb-8 max-w-3xl mx-auto leading-relaxed animate-fadeInUp" style="animation-delay: 0.2s">
          根据您的具体需求，为您量身定制空间信息服务解决方案。我们通常在24小时内提供详细的项目建议书。
        </p>

        <!-- Quick Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 pt-8 border-t border-white/20 animate-fadeInUp" style="animation-delay: 0.3s">
          <div class="group">
            <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200 mb-1">24h</div>
            <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">响应时间</div>
          </div>
          <div class="group">
            <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200 mb-1">400+</div>
            <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">满意客户</div>
          </div>
          <div class="group">
            <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200 mb-1">99.9%</div>
            <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">按时交付率</div>
          </div>
          <div class="group">
            <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200 mb-1">10+</div>
            <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">服务网点</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Wave separator -->
    <!-- <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full">
        <path d="M0 120L60 110C120 100 240 80 360 70C480 60 600 60 720 65C840 70 960 80 1080 85C1200 90 1320 90 1380 90L1440 90V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z" fill="white"/>
      </svg>
    </div> -->
  </section>

  <!-- Main Form Section -->
  <Section background="gray">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <!-- Form -->
      <div class="lg:col-span-2">
        <Card>
          <RFQForm client:load />
        </Card>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Contact Info Card -->
        <Card class="bg-linear-to-br from-blue-50 to-teal-50 border-blue-200">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 rounded-lg bg-linear-to-br from-blue-600 to-teal-600 flex items-center justify-center mr-3">
              <Phone className="w-5 h-5 text-white" />
            </div>
            <h3 class="text-xl font-bold text-gray-900">需要帮助？</h3>
          </div>
          <div class="space-y-4 text-sm">
            <div class="flex items-start space-x-3 p-3 bg-white rounded-lg hover:shadow-md transition-shadow">
              <div class="w-10 h-10 rounded-lg bg-blue-100 flex items-center justify-center shrink-0">
                <Phone className="w-5 h-5 text-blue-600" />
              </div>
              <div>
                <div class="font-semibold text-gray-900">电话</div>
                <div class="text-gray-600">0771-12345678</div>
              </div>
            </div>
            
            <div class="flex items-start space-x-3 p-3 bg-white rounded-lg hover:shadow-md transition-shadow">
              <div class="w-10 h-10 rounded-lg bg-teal-100 flex items-center justify-center shrink-0">
                <Mail className="w-5 h-5 text-teal-600" />
              </div>
              <div>
                <div class="font-semibold text-gray-900">邮箱</div>
                <div class="text-gray-600">contact@gxrsky.com</div>
              </div>
            </div>

            <div class="flex items-start space-x-3 p-3 bg-white rounded-lg hover:shadow-md transition-shadow">
              <div class="w-10 h-10 rounded-lg bg-indigo-100 flex items-center justify-center shrink-0">
                <Clock className="w-5 h-5 text-indigo-600" />
              </div>
              <div>
                <div class="font-semibold text-gray-900">办公时间</div>
                <div class="text-gray-600">周一至周五: 8:30 - 18:00</div>
              </div>
            </div>
          </div>
        </Card>

        <!-- Why Choose Us -->
        <Card class="bg-slate-900 text-white border-slate-800">
          <div class="flex items-center mb-6">
            <div class="w-10 h-10 rounded-lg bg-linear-to-br from-orange-500 to-red-500 flex items-center justify-center mr-3">
              <Award className="w-5 h-5 text-white" />
            </div>
            <h3 class="text-xl font-bold">为什么选择我们？</h3>
          </div>
          <ul class="space-y-4">
            <li class="flex items-start">
              <CheckCircle2 className="w-5 h-5 text-teal-400 mr-3 shrink-0 mt-0.5" />
              <div>
                <strong class="block text-teal-100">行业专家</strong>
                <span class="text-sm text-slate-400">数十年的空间信息技术积累与行业应用经验。</span>
              </div>
            </li>
            <li class="flex items-start">
              <TrendingUp className="w-5 h-5 text-blue-400 mr-3 shrink-0 mt-0.5" />
              <div>
                <strong class="block text-blue-100">全区覆盖</strong>
                <span class="text-sm text-slate-400">业务覆盖全区及周边省份。</span>
              </div>
            </li>
            <li class="flex items-start">
              <Shield className="w-5 h-5 text-purple-400 mr-3 shrink-0 mt-0.5" />
              <div>
                <strong class="block text-purple-100">技术驱动</strong>
                <span class="text-sm text-slate-400">先进的遥感监测与大数据分析平台。</span>
              </div>
            </li>
            <li class="flex items-start">
              <Users className="w-5 h-5 text-orange-400 mr-3 shrink-0 mt-0.5" />
              <div>
                <strong class="block text-orange-100">全天候支持</strong>
                <span class="text-sm text-slate-400">专业团队为您提供持续的技术支持。</span>
              </div>
            </li>
          </ul>
        </Card>
      </div>
    </div>
  </Section>

  <!-- Trust & Success Section -->
  <Section background="white">
    <div class="text-center mb-12">
      <div class="inline-block px-4 py-2 mb-4 bg-blue-100 text-blue-800 text-sm font-semibold rounded-full">
        Trusted by Industry Leaders
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Join Hundreds of <span class="text-transparent bg-clip-text bg-linear-to-r from-blue-600 to-teal-600">Successful Companies</span>
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        We've helped companies of all sizes streamline their logistics and manufacturing operations.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      <!-- Feature 1 -->
      <Card class="text-center hover:shadow-xl transition-all duration-300">
        <div class="w-16 h-16 rounded-full bg-linear-to-br from-blue-600 to-teal-600 flex items-center justify-center mx-auto mb-4">
          <Shield className="w-8 h-8 text-white" />
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Secure & Reliable</h3>
        <p class="text-gray-600">
          Enterprise-grade security and 99.9% uptime guarantee for your peace of mind.
        </p>
      </Card>

      <!-- Feature 2 -->
      <Card class="text-center hover:shadow-xl transition-all duration-300">
        <div class="w-16 h-16 rounded-full bg-linear-to-br from-green-600 to-emerald-600 flex items-center justify-center mx-auto mb-4">
          <TrendingUp className="w-8 h-8 text-white" />
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Scalable Solutions</h3>
        <p class="text-gray-600">
          Grow your business with solutions that scale from startup to enterprise level.
        </p>
      </Card>

      <!-- Feature 3 -->
      <Card class="text-center hover:shadow-xl transition-all duration-300">
        <div class="w-16 h-16 rounded-full bg-linear-to-br from-purple-600 to-pink-600 flex items-center justify-center mx-auto mb-4">
          <Users className="w-8 h-8 text-white" />
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Expert Support</h3>
        <p class="text-gray-600">
          Dedicated account managers and 24/7 support to help you succeed.
        </p>
      </Card>
    </div>

    <!-- Visual Showcase -->
    <div class="relative rounded-2xl overflow-hidden shadow-2xl">
      <div class="absolute inset-0">
        <Image 
          src={warehouseImg}
          alt="Modern warehouse facility with advanced logistics technology"
          class="w-full h-full object-cover"
          width={2070}
          height={800}
        />
        <div class="absolute inset-0 bg-linear-to-r from-slate-900/90 via-blue-900/80 to-slate-900/70"></div>
      </div>
      <div class="relative z-10 p-12 md:p-16 text-center text-white">
        <h3 class="text-3xl md:text-4xl font-bold mb-4">
          Ready to Transform Your Supply Chain?
        </h3>
        <p class="text-xl text-slate-200 mb-8 max-w-2xl mx-auto">
          Get started today with a customized quote that fits your unique business needs.
        </p>
        <a 
          href="#rfq-form" 
          class="inline-flex items-center px-8 py-4 bg-linear-to-r from-blue-600 to-teal-600 hover:from-blue-700 hover:to-teal-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transition-all duration-200"
        >
          Request Your Quote Now
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </Section>
</BaseLayout>

